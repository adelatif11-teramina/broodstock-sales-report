# Environment Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
# Option 1: Use Railway DATABASE_URL (recommended for production)
# DATABASE_URL=postgresql://user:password@host:port/database
#
# Option 2: Individual connection parameters (fallback)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=broodstock_sales
# DB_USER=postgres
# DB_PASSWORD=your-secure-password

# JWT Configuration - MUST be changed in production
JWT_SECRET=generate-a-strong-secret-key-here
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=generate-another-strong-secret-key-here
JWT_REFRESH_EXPIRES_IN=7d

# File Storage Configuration
STORAGE_TYPE=local
S3_BUCKET=broodstock-files
S3_REGION=us-east-1
# S3_ACCESS_KEY_ID=your-aws-access-key
# S3_SECRET_ACCESS_KEY=your-aws-secret-key
# S3_ENDPOINT=your-s3-endpoint

# External APIs
# GEOCODING_API_KEY=your-geocoding-api-key
GEOCODING_PROVIDER=openstreetmap

# Security
BCRYPT_ROUNDS=12
CORS_ORIGIN=http://localhost:3000

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100