# Test Environment Variables
NODE_ENV=test
JWT_SECRET=test-jwt-secret-key-for-testing-only-not-for-production
JWT_REFRESH_SECRET=test-refresh-secret-key-for-testing
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Test Database (use a separate test database)
DATABASE_URL=postgresql://localhost:5432/sales_report_test
TEST_DATABASE_URL=postgresql://localhost:5432/sales_report_test

# CORS (allow all origins in test)
CORS_ORIGINS=*

# Rate limiting (disabled in tests)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# File upload settings
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,application/pdf

# AWS S3 (mock in tests)
AWS_ACCESS_KEY_ID=test-access-key
AWS_SECRET_ACCESS_KEY=test-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=test-bucket

# Geocoding (mock in tests)  
GEOCODING_API_KEY=test-geocoding-api-key

# Logging
LOG_LEVEL=error