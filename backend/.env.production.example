# Production Environment Configuration
# Copy to .env for production deployment

# Environment
NODE_ENV=production
PORT=3001

# Database Configuration (Railway PostgreSQL)
# Use Railway's internal connection string for production
DATABASE_URL=postgresql://postgres:PASSWORD@postgres.railway.internal:5432/railway

# JWT Configuration - MUST use strong secrets in production
JWT_SECRET=REPLACE_WITH_STRONG_256_BIT_SECRET
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=REPLACE_WITH_ANOTHER_STRONG_256_BIT_SECRET
JWT_REFRESH_EXPIRES_IN=7d

# File Storage Configuration
STORAGE_TYPE=s3
S3_BUCKET=broodstock-production-files
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
S3_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY
S3_ENDPOINT=https://s3.amazonaws.com

# External APIs
GEOCODING_API_KEY=YOUR_GEOCODING_API_KEY
GEOCODING_PROVIDER=google

# Security
BCRYPT_ROUNDS=12
CORS_ORIGIN=https://your-production-domain.com

# Monitoring & Logging
LOG_LEVEL=info
SENTRY_DSN=YOUR_SENTRY_DSN_FOR_ERROR_TRACKING

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100